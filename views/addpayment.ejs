<%- include('partials/header') %>
<div class="container mt-5" style="margin-left:20%">
  <h1>Add fine</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
    
          <!-- Makes POST request to /register route -->
          <form action="/add" method="POST">
            <div class="form-group">
              <div class="form-group">
                <label for="regno">Reg number</label>
                <input type="text" class="form-control" name="regno" required>
              </div>
              <div class="form-group">
                <label for="name">Student Name</label>
                <input type="text" class="form-control" name="studentname" required>
              </div>
              <div class="form-group">
                <label for="course">Course</label>
                <input type="text" class="form-control" name="course" required>
              </div>
              <div class="form-group">
                <label for="batch">Batch</label>
                <input type="text" class="form-control" name="batch" required>
              </div>
       
            <div class="form-group">
                <label for="date">Date of Payment</label>
                <input type="date" class="form-control" name="date" required>
              </div>
            
            <div class="form-group">
                <label for="paymentby">Payment By</label>
                <input type="text" class="form-control" name="paymentby" required>
              </div>
         
            <div class="form-group">
                <label for="paymentfor">Payment For</label>
                <input type="text" class="form-control" name="paymentfor" required>
              </div>
        
            <div class="form-group">
                <label for="punishments">Punishments</label>
                <select id="punishments" name="punishments" required>
                    <option value="dresscode">Informal Dress code - Rs. 15</option>
                    <option value="assignment">Late Submission of Assignment - Rs.10</option>
                    <option value="late comers">Late comers - Rs.50</option>
                  </select>
            </div>
            <div class="form-group">
                <label for="amount">Paid Amount</label>
                <input type="number" class="form-control" name="amount" required>
            </div>
            <button type="submit" class="btn  btn-info">Register</button>
            <a class="btn  btn-info btn-lg" style="width: 14%;height:5vh" href="/cashierhome" role="button">Back</a> 
          </form>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/header') %>
